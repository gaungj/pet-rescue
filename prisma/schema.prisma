generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id       String  @id @default(cuid())
  email    String  @unique
  name     String
  password String
}

model Pets {
  id                String  @id @default(cuid())
  name              String
  description       String
  category          String
  breed             String
  gender            String
  age               String
  health_condition  String
  location          String
}

